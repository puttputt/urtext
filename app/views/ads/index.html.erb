<h1>Listing ads</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Type</th>
    <th>User</th>
    <th>Textbook</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ads.each do |ad| %>
  <tr>
    <td><%= ad.description %></td>
    <td><%= ad.type %></td>
    <td><%= ad.user_id %></td>
    <td><%= ad.textbook_id %></td>
    <td><%= ad.price %></td>
    <td><%= link_to 'Show', ad %></td>
    <td><%= link_to 'Edit', edit_ad_path(ad) %></td>
    <td><%= link_to 'Destroy', ad, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

